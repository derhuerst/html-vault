{
	"private": true,
	"name": "html-vault",
	"description": "Store a secret securely in a standalone HTML file.",
	"version": "0.1.0",
	"keywords": [
		"secret",
		"encrypt",
		"decrypt",
		"sodium",
		"html",
		"share"
	],
	"author": "Jannis R <mail@jannisr.de>",
	"homepage": "https://derhuerst.github.io/html-vault/",
	"repository": "derhuerst/html-vault",
	"bugs": "https://github.com/derhuerst/todo-name/issues",
	"license": "ISC",
	"dependencies": {
		"file-saver": "^1.3.3",
		"self-decrypting-html-page": "^0.2.0",
		"sodium-encryption": "^1.2.3"
	},
	"devDependencies": {
		"babel-core": "^6.26.0",
		"babel-preset-env": "^1.6.1",
		"babelify": "^8.0.0",
		"browserify": "^16.1.0",
		"envify": "^4.1.0",
		"uglifyify": "^4.0.5"
	},
	"scripts": {
		"dev": "browserify src/index.js >dist/bundle.js",
		"build": "env NODE_ENV=production browserify -g [ babelify --presets env ] -g envify -g uglifyify src/index.js >dist/bundle.js"
	}
}
